{
    "manifest_version": 3,
    "name": "Research Assistant Pro",
    "version": "2.0",
    "description": "AI-powered Research Assistant with enhanced features",
    "permissions": [
        "activeTab",
        "storage",
        "sidePanel",
        "scripting",
        "contextMenus"
    ],
    "action": {
        "default_title": "Research Assistant Pro"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "http://localhost:8080/*",
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}